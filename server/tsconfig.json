{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,         // ✅ Add this line
    "allowSyntheticDefaultImports": true  // ✅ Add this for JSON import
  },
  "include": ["./**/*", "server/types"]
}
